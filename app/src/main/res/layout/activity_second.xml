<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#f0f8ff"
    tools:context=".SecondActivity">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp">

            <!-- Панель заголовка -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#4682B4"
                android:padding="16dp"
                android:gravity="center">

                <!-- Логотип -->
                <ImageView
                    android:id="@+id/logo"
                    android:layout_width="80dp"
                    android:layout_height="80dp"
                    android:src="@drawable/logo_plane" />

            </LinearLayout>

            <!-- Заголовок -->
            <TextView
                android:id="@+id/welcome_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:layout_marginTop="16dp"
                android:text="Добро пожаловать в АвиаСтрелу!"
                android:textColor="#4682B4"
                android:textSize="24sp"
                android:textStyle="bold" />

            <!-- Описание -->
            <TextView
                android:id="@+id/welcome_description"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Планируйте своё путешествие с комфортом: просматривайте актуальное расписание рейсов и легко приобретайте билеты!"
                android:textColor="#555555"
                android:gravity="center"
                android:textSize="16sp"
                android:layout_marginTop="8dp" />

            <!-- Кнопка "Покупка Билетов" -->
            <Button
                android:id="@+id/btn_purchase_ticket"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Покупка Билетов"
                android:textColor="#FFFFFF"
                android:backgroundTint="#4682B4"
                android:layout_marginTop="16dp"
                android:padding="12dp" />

            <!-- Кнопка "Просмотр Расписания" -->
            <Button
                android:id="@+id/btn_view_schedule"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Просмотр Расписания"
                android:textColor="#FFFFFF"
                android:backgroundTint="#4682B4"
                android:layout_marginTop="16dp"
                android:padding="12dp" />

        </LinearLayout>
    </ScrollView>

    <!-- Футер с юридической информацией -->
    <LinearLayout
        android:id="@+id/footer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center"
        android:padding="16dp"
        app:layout_constraintBottom_toBottomOf="parent">

        <!-- Текст юридической информации -->

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Мобильное приложение АвиаСтрела."
            android:textColor="#888888"
            android:gravity="center"
            android:textSize="12sp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="© АвиаСтрела 2005-2024 г. Все права защищены."
            android:textColor="#888888"
            android:textSize="12sp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Электронная почта: Zhornych@yandex.ru"
            android:textColor="#888888"
            android:textSize="12sp" />
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>